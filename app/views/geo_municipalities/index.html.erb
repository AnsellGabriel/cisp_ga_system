<%= content_tag :h1, "List of Geo Municipalities" %>


<div class="text-end mb-3">
  <%= link_to new_geo_municipality_path, class: 'btn btn-primary' do %>
    New Geo Municipality
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-borderless table-hover">
    <thead>
      <tr class="border-top border-bottom border-primary">

      <th>#</th>
        <th>Geo Region</th>
        <th>Geo Province</th>
        <th>Name</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @geo_municipalities.each do |geo_municipality| %>
        <tr>

        <th scope="row"><%= geo_municipality.id %></th>
        <td><%= geo_municipality.geo_region %></td>
        <td><%= geo_municipality.geo_province %></td>
        <td><%= geo_municipality.name %></td>
    
          <td>
            <%= link_to 'View', geo_municipality, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_geo_municipality_path(geo_municipality), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", geo_municipality, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
