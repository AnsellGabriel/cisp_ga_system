

<div class="card">
  <div class="card-header">
    <h1>Participant</h1>
    <%= link_to "Delete", @participant, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
  </div>
  <div class="card-body">
    <%= render @participant %>
  </div>
  <div class="card-footer">
    <%= link_to "Edit", edit_participant_path(@participant), class: "btn btn-secondary btn-sm" %> |
    <%= link_to "Back", participants_path, class: "btn btn-secondary btn-sm" %>
  </div>

</div>