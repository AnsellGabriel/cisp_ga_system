<%= content_tag :h1, "List of Participants" %>


<div class="text-end mb-3">
  <%= link_to new_participant_path, class: 'btn btn-primary' do %>
    New Participant
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-borderless table-hover">
    <thead>
      <tr class="border-top border-bottom border-primary">

      <th>#</th>
        <th class="text-primary">Event Hub</th>
        <th class="text-primary">Last Name</th>
        <th class="text-primary">First Name</th>
        <th class="text-primary">Middle Name</th>
        <th class="text-primary">Birth Date</th>
        <th class="text-primary">Mobile Number</th>
        <th class="text-primary">Email</th>
        <th class="text-primary">Guest Type</th>
        <th class="text-primary">Attendance Channel</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @participants.each do |participant| %>
        <tr>

        <th scope="row"><%= participant.id %></th>
        <td><%= participant.event_hub %></td>
        <td><%= participant.last_name %></td>
        <td><%= participant.first_name %></td>
        <td><%= participant.middle_name %></td>
        <td><%= participant.birth_date %></td>
        <td><%= participant.mobile_number %></td>
        <td><%= participant.email %></td>
        <td><%= participant.guest_type %></td>
        <td><%= participant.attendance_channel %></td>
    
          <td>
            <%= link_to 'View', participant, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_participant_path(participant), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", participant, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
