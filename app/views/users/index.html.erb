<%= content_tag :h1, "List of Users" %>


<div class="text-end mb-3">
  <%= link_to new_user_path, class: 'btn btn-primary' do %>
    New User
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-borderless table-hover">
    <thead>
      <tr class="border-top border-bottom border-primary">

      <th>#</th>
        <th class="text-primary">Last Name</th>
        <th class="text-primary">First Name</th>
        <th class="text-primary">Middle Name</th>
        <th class="text-primary">Enable</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>

        <th scope="row"><%= user.id %></th>
        <td><%= user.last_name %></td>
        <td><%= user.first_name %></td>
        <td><%= user.middle_name %></td>
        <td><%= user.enable %></td>
    
          <td>
            <%= link_to 'View', user, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", user, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
