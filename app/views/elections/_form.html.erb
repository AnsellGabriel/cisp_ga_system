<%= simple_form_for @election, url: elections_path(p: 1,r: params[:r]), method: :post do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="col d-flex justify-content-center">
    <div class="card mb-3" style="max-width: 900px;">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag 'chmf_10th_home.png', width:'100%', height:'100%', class: "img-fluid rounded-start" %>
          <%#= image_tag 'ocb_logo.png', width:'100%', height:'100%', class: "img-fluid rounded-start" %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="text-end">
              <%#= link_to '<i class="bi bi-gear"></i>'.html_safe, coop_event_path(@coop_event), class: 'text-secondary' %>
              <%= link_to '<i class="bi bi-arrow-left-circle"></i>'.html_safe, root_path, class: 'text-secondary' %>
            </div>
            <% @coop_event = CoopEvent.find_by(:active => 1) %>
            <h5 class="card-title mt-4"><%= @coop_event.name %></h5>
            <p class="card-text mt-4"><small class="text-muted"><%= @coop_event.description %></small></p>
            <div class="form-inputs mb-5" style="text-align: center;">
              <div class="form-inputs mb-3">
                <%#= f.association :event_hub %>
                <%= f.input :voter_code, input_html: { style: "text-align: center;" }  %>
              </div>
              <div class="form-actions text-center">
                <%#= link_to "Back", root_path, class: "btn btn-secondary" %>
                <%= f.button :submit, class: "btn btn-success btn-lg", value: "Enter Code" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
