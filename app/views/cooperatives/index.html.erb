<%= content_tag :h1, "List of Cooperatives" %>


<div class="text-end mb-3">
  <%= link_to new_cooperative_path, class: 'btn btn-primary' do %>
    New Cooperative
  <% end %>
</div>

<table class ="table table-striped">
  <table class="table table-borderless table-hover">
    <thead>
      <tr class="border-top border-bottom border-primary">

      <th>#</th>
        <th>Name</th>
        <th></th>

      </tr>
    </thead>

    <tbody>
      <% @cooperatives.each do |cooperative| %>
        <tr>

        <th scope="row"><%= cooperative.id %></th>
        <td><%= cooperative.name %></td>
    
          <td>
            <%= link_to 'View', cooperative, class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Edit', edit_cooperative_path(cooperative), class: 'btn btn-secondary btn-sm' %>
            <%= link_to "Delete", cooperative, class: "btn btn-danger btn-sm", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
