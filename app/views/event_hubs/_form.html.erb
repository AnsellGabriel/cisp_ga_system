
<%= simple_form_for(@event_hub) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :coop_event %>
    <% #= f.association :cooperative %>
    <%= f.association :cooperative,
                      include_blank: "Search cooperative",
                      wrapper_html: { class: "", style: "margin-bottom: 0!important;" },
                      input_html: { data: { controller: "ts--select" } },
                      error: "*Required" %>
    <div class="row">
    <%= f.input :capital, wrapper_html: { class: "col-md-3" } %>
    <%= f.input :code, wrapper_html: { class: "col-md-3" } %>
    <%= f.input :vote_power, wrapper_html: { class: "col-md-3" } %>
    <%= f.input :vote_code, wrapper_html: { class: "col-md-3" } %>
    </div>
  </div>

  <div class="form-actions text-end mt-3">
    <%= link_to "Back", event_hubs_path, class: "btn btn-secondary" %>
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
