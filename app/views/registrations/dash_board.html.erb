<div class="text-end mb-3">
  <%= link_to '<i class="bi bi-arrow-clockwise"></i>'.html_safe, dash_board_registrations_path, class: 'btn btn-secondary btn-lg', data: { turbo_frame: :results }  %>
  <%= link_to 'Back', home_event_hubs_path, class: 'btn btn-secondary btn-lg' %>
  <%= link_to 'Register', new_modal_registrations_path(q: "notmodal"), class: 'btn btn-primary btn-lg' %>
</div>
<%= turbo_frame_tag :result do %>
  <div class="row">
    <div class="col-md-4">
      <div class="card text-bg-primary mb-3">
        <div class="card-header">
          Principal Delegate:
        </div>
        <div class="card-body">
          <%# <h1><i class="bi bi-person-fill"></i></h1> %>
          <h4><%= @principal_count %></h4>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-bg-info mb-3">
        <div class="card-header">
          Accompanying Delegate:
        </div>
        <div class="card-body">
          <h4><%= @accompanying_count %></h4>
        </div>
      </div>
    </div>
    <%= turbo_frame_tag "attend" do %>
      <div class="col-md-4">
        <div class="card text-bg-warning mb-3">
          <div class="card-header">
            Attendance:
          </div>
          <div class="card-body">
            <p> <strong>Principal :</strong> <%= @attend_principal %></p>
            <p><strong>Accompanying :</strong> <%= @attend_associate %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <table class="table table-primary table-hover">
    <thead>
      <tr class="table-info">
        <th>Attendance channel</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>I will attend physically in the venue</td>
        <td><%= @attend_venue %></td>
      </tr>
      <tr>
        <td>I will attend virtually via zoom</td>
        <td><%= @attend_zoom %></td>
      </tr>
      <tr>
        <td>I will attend virtually and will avail AGA kit (will shoulder shipping cost)</td>
        <td><%= @attend_kit %></td>
      </tr>
      <tr class="table-info">
        <td><strong>Total</strong></td>
        <td><%= @attend_venue + @attend_zoom + @attend_kit %></td>
      </tr>
    </tbody>
  </table>
<%end%>
