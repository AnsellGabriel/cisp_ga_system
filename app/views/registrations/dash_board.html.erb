          <div class="col-md-6">
            <div class="row">
              <div class="col-md-6">
                <div class="card text-bg-primary mb-3">
                  <div class="card-header">
                    Voted Members
                  </div>
                  <div class="card-body">
                    <% voted_member = @event_hubs.where(voted: 1).count %>
                    <h4><%= voted_member %></h4>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card text-bg-primary mb-3">
                  <div class="card-header">
                    Members not yet Voted
                  </div>
                  <div class="card-body">
                    <% member_not_voted = @registrations.where(guest_type: "Principal Delegate").count %>
                    <h4><%= member_not_voted - voted_member %></h4>
                  </div>
                </div>
              </div>
            </div>
            <div class="card text-bg-secondary mb-3">
            <div class="card-header">
              Attendance
            </div>
            <div class="card-body">
              <h4><%= @registrations.where(attend: 1).count %></h4>
            </div>
            <ul class="list-group list-group-flush">
              <% @registrations.where(attend: 1).group(:guest_type).count.each do |y| %>
                <li class="list-group-item">
                  <div class="row">
                    <div class="col-10">
                      <%= y[0] %>
                    </div>
                    <div class="col-2">
                      <%= to_curr(y[1]) %>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
            <div class="card text-bg-light mb-3">
              <div class="card-header">
                Number of shares:
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-8">
                    <% attend_shares = @event_hubs.where(attend: 1).sum(:capital) %>
                    <% total_shares = @event_hubs.sum(:capital) %>

                    <p> <strong>Present no. of shares :</strong> <%= to_curr(attend_shares) %></p>
                    <p><strong>Total no. of shares :</strong> <%= to_curr(total_shares) %></p>
                  </div>
                  <div class="col-4 text-center">
                    <p class="mb-0"><strong>Quorum :</strong></p>
                    <% quorum = (attend_shares / total_shares) * 100 %>
                    <h1 class="mt-0 text-primary"><%= to_curr(quorum) %></h1>
                  </div>
                </div>
              </div>
              <%# end %>
